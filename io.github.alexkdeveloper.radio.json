{
  "app-id": "io.github.alexkdeveloper.radio",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "io.github.alexkdeveloper.radio",
  "finish-args": [
     "--device=dri",
     "--share=ipc",
     "--share=network",
     "--socket=fallback-x11",
     "--socket=wayland",
     "--socket=pulseaudio"
  ],
  "cleanup": [
     "/include",
     "/lib/pkgconfig",
     "/man",
     "/share/doc",
     "/share/gtk-doc",
     "/share/man",
     "/share/pkgconfig",
     "/share/vala",
     "*.la",
     "*.a"
  ],
  "modules": [
      {
            "name": "libsoup-2.4",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=disabled",
                "-Dtests=false",
                "-Dtls_check=false",
                "-Dntlm=disabled",
                "-Dsysprof=enabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libsoup.git",
                    "commit": "b0e2d85e36c5a9ee8d4caf16dbdc30302fcf470d"
                }
            ]
        },
     {
        "name": "Radio",
        "buildsystem": "meson",
        "sources": [
            {
                "type" : "git",
                "url" : "https://github.com/alexkdeveloper/radio.git"
            }
        ]
      }
  ]
}

